{
  "name": "project-vesper",
  "version": "0.2.0",
  "type": "module",
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "@happy-dom/global-registrator": "^20.4.0",
    "@types/d3": "^7.4.3",
    "@typescript-eslint/eslint-plugin": "^8.54.0",
    "@typescript-eslint/parser": "^8.54.0",
    "browser-sync": "^3.0.4",
    "browsersync": "^0.0.1-security",
    "concurrently": "^9.2.1",
    "cross-env": "^10.1.0",
    "esbuild": "^0.27.2",
    "eslint": "^9.39.2",
    "globals": "^17.2.0",
    "husky": "^9.1.7",
    "stylelint": "^17.0.0",
    "stylelint-config-recess-order": "^7.6.0",
    "stylelint-config-standard": "^40.0.0",
    "typescript": "^5.9.3",
    "typescript-eslint": "^8.54.0",
    "wait-on": "^9.0.3"
  },
  "scripts": {
    "build": "node build.mjs --prod",
    "build:watch": "node build.mjs --watch",
    "dev": "concurrently -k -p \"[{name}]\" -n esbuild,flask,sync \"npm run -s build:watch\" \"npm run -s flask:dev\" \"npm run -s sync\"",
    "flask:dev": "flask run --debug",
    "sync": "wait-on tcp:127.0.0.1:5000 --timeout 5000 && browser-sync start --proxy http://127.0.0.1:5000 --port 5001 --files \"app/_templates/**/*.html, app/static_src/**/*\" --no-ui --open local",
    "lint:ts": "eslint app/static_src/js",
    "lint:python": "ruff check .",
    "lint:css": "stylelint '**/*.css'",
    "type-check": "tsc --noEmit",
    "type-check:python": "mypy .",
    "check": "npm run lint && npm run type-check && npm run lint:python && npm run type-check:python && npm run lint:css && npm run lint:templates",
    "audit": "npm audit --audit-level=high",
    "prepare": "husky",
    "test": "bun test && pytest",
    "test:ts": "bun test",
    "test:python": "pytest"
  },
  "dependencies": {
    "d3": "^7.9.0"
  }
}
