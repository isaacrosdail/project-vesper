{
    "terminal.integrated.cwd": "/home/user/projects/project-vesper",
    "terminal.integrated.env.linux": {
        "PRE_NAMESPACE_PWD": "${cwd}"
    },
    "python.testing.pytestArgs": [
        "tests"
    ],
    "python.testing.unittestEnabled": false,
    "python.testing.pytestEnabled": true,
    "css.lint.unknownAtRules": "ignore",

    // Hide files from explorer pane view
    "files.exclude": {
        "node_modules/": true,
        ".venv/": true,
        ".pytest_cache/": true,
        ".coverage": true,
        "**/__pycache__/": true,
        "htmlcov/": true,
        ".VSCodeCounter/**": true,
        ".ruff_cache": true,
        "**/.vscode": true,
        "**/.husky": true,
        "alembic/README": true,
        "alembic/script.py.mako": true,
        "nginx/**": true,
    },
    "search.exclude": {
        "node_modules/": true,
        "**/package-lock.json": true,
        ".venv/": true,
        ".pytest_cache/": true,
        ".coverage": true,
        "PROJECT_LOG.md": true,
    },
    "files.watcherExclude": {
        "**/node_modules/**": true,
        "**/.venv/**": true,
        "**/.pytest_cache/**": true,
        "**/.coverage/**": true,
        "**/__pycache__/**": true,
        "**/.git/**": true,
        "**/.git/objects/**": true,
        "**/.git/subtree-cache/**": true,
        "**/.hg/store/**": true
    },
}